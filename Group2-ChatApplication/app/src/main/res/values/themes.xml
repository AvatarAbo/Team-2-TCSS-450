<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="LightTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!--    <style name="Theme.WeatherApp" parent="Theme.MaterialComponents.Light">-->
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorOnSecondary">@android:color/primary_text_light</item>
        <item name="backgroundColor">@color/secondaryTextColorFade</item>
        <item name="textColor">@color/secondaryTextColor</item>
        <item name="hintColor">@color/colorOffWhite</item>
        <item name="chatColor">@color/secondaryTextColorFade</item>
        <item name="secondTextColor">@android:color/darker_gray</item>
        <item name="appColor">@color/purple_700</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="DarkTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#212121</item>
        <item name="colorPrimaryVariant">#000000</item>
        <item name="colorOnPrimary">@color/colorOffWhite</item>
        <!-- Secondary brand color. -->
        <item name="colorOnSecondary">@color/black</item>
        <item name="backgroundColor">@color/white</item>
        <item name="textColor">@color/primaryTextColor</item>
        <item name="hintColor">@color/black</item>
        <item name="chatColor">@color/secondaryTextColor</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
</resources>