<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/hour_parent"
    android:layout_width="30dp"
    android:layout_height="150dp"
    android:layout_margin="2dp"
    android:foregroundGravity="bottom|center_horizontal"
    tools:context=".weather.DayHourForecastBar">

    <View
        android:id="@+id/temp_bar"
        android:layout_width="wrap_content"
        android:layout_height="130dp"
        android:background="@color/colorWeatherDark"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/hour_temperature_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:foregroundGravity="bottom|center_horizontal"
        app:layout_constraintBottom_toTopOf="@+id/temp_bar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/hour_time_text"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginBottom="2dp"
        android:foregroundGravity="bottom|center_horizontal"
        android:gravity="bottom|center_horizontal"
        android:textColor="@color/colorOffWhite"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@+id/temp_bar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/temp_bar" />
</androidx.constraintlayout.widget.ConstraintLayout>